<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="home_text">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="home_text_xs" parent="home_text">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="home_text_s" parent="home_text">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="home_text_m" parent="home_text">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="home_text_l" parent="home_text">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="home_text_xl" parent="home_text">
        <item name="android:textSize">32sp</item>
    </style>
</resources>