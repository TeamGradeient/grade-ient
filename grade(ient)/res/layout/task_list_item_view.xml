<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minHeight="?android:attr/listPreferredItemHeight" >

    <CheckBox
        android:id="@+id/done_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:focusable="false" 
        android:focusableInTouchMode="false" />
    
    <TextView
        android:id="@+id/subject_abbrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/task_name"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/done_cb"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/subject_abbrev"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp" 
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/task_due"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_name"
        android:layout_toRightOf="@id/done_cb"
        android:paddingBottom="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/task_color"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" 
        android:layout_alignBottom="@id/task_due" />

</RelativeLayout>